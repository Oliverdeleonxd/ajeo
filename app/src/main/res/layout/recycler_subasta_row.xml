<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cardView"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="15dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/gris"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"

        android:layout_margin="5dp"

        android:elevation="10dp"


        >


        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_marginStart="10dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:layout_marginEnd="10dp"-->
        <!--            android:layout_marginBottom="10dp"-->

        <!--            android:backgroundTint="@color/ColorAjeo"-->
        <!--            android:elevation="20dp"-->
        <!--            app:cardCornerRadius="50dp"-->
        <!--            app:cardElevation="10dp">-->

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gris"
            android:elevation="2dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp">

            <ImageView

                android:id="@+id/img_rowSubasta"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:scaleType="fitXY"

                android:src="@drawable/logoajeo"

                />

        </androidx.cardview.widget.CardView>

        <TextView

            android:id="@+id/tv_title_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardImg"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/urbanistbold"
            android:maxLines="3"
            android:singleLine="true"
            android:text="Hola mundo"
            android:textColor="@color/black"
            android:textSize="20dp"


            />

        <TextView
            android:id="@+id/tv_Bl_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_row"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/urbanistbold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Bl/. "
            android:textColor="@color/ColorAjeo"
            android:textSize="18dp"


            />

        <TextView
            android:id="@+id/tv_precio_RrowSu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_row"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/tv_Bl_row"
            android:fontFamily="@font/urbanistbold"
            android:maxLines="1"

            android:singleLine="true"
            android:text="1 000 000 000"
            android:textColor="@color/ColorAjeo"
            android:textSize="18dp"


            />

        <ImageButton
            android:id="@+id/tv_imgFav_row"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_title_row"
            android:layout_alignEnd="@+id/tv_title_row"
            android:src="@drawable/ic_favorite"


            />

        <TextView

            android:id="@+id/tv_Raza_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_precio_RrowSu"
            android:layout_alignRight="@+id/tv_imgFav_row"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/urbanistbold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Raza"
            android:textColor="#7E7D7D"
            android:textSize="18dp"


            />



        <!--        </androidx.cardview.widget.CardView>-->


    </RelativeLayout>


</androidx.cardview.widget.CardView>